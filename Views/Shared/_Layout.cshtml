@using System.Linq
@using CollectorHub.Models

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CollectorHub - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
</head>
<body>
    <nav>
        <h2 class="site-title" style="font-size:32px;">CollectorHub</h2>
        <a asp-controller="Collections" asp-action="Index" class="collection-nav-btn">Мои коллекции</a>
        @{
            var collections = Context.Items["Collections"] as List<CollectorHub.Models.Collection>;
            var openCollectionId = TempData["OpenCollectionId"]?.ToString();
        }
        @if (collections != null && collections.Any())
        {
            <div class="collection-tree">
                @foreach (var collection in collections.Where(c => c.parent_id == null))
                {
                    <details @(openCollectionId == collection.collection_id.ToString() ? "open" : "")>
                        <summary>
                            <a asp-controller="Collections" asp-action="Details" asp-route-id="@collection.collection_id" asp-route-openCollectionId="@collection.collection_id">@collection.name</a>
                        </summary>
                        <ul>
                            @foreach (var child in collection.Inverseparent ?? new List<CollectorHub.Models.Collection>())
                            {
                                <li><a asp-controller="Collections" asp-action="Details" asp-route-id="@child.collection_id" asp-route-openCollectionId="@collection.collection_id">@child.name</a></li>
                            }
                        </ul>
                    </details>
                }
            </div>
        }
        <a asp-controller="Collections" asp-action="Create" class="create-collection"><i class="bi bi-plus-circle"></i>Создать<br>коллекцию</a>

        @if (User.Identity.IsAuthenticated)
        {
            <div class="user-greeting">
                <div class="greeting-text">Привет, @User.Identity.Name!</div>
                <form asp-action="Logout" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-link text-danger p-0">Выйти</button>
                </form>
            </div>
        }
    </nav>

    <main class="flex-grow-1">
        <div class="container-fluid">
            @if (!User.Identity.IsAuthenticated)
            {
                <div class="d-flex justify-content-end align-items-center mb-3">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary me-2">Войти</a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Регистрация</a>
                </div>
            }

            @RenderBody()
        </div>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>