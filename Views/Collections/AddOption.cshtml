@model CollectorHub.ViewModels.FieldOptionViewModel

@{
    ViewData["Title"] = "Добавление варианта";
}

<h1>Добавление варианта</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Новый вариант для поля "@Model.FieldName"</h5>
            </div>
            <div class="card-body">
                <form asp-action="AddOption" method="post">
                    <input type="hidden" asp-for="FieldId" />
                    <input type="hidden" asp-for="CollectionId" />
                    <input type="hidden" asp-for="FieldName" />

                    <div class="mb-3">
                        <label asp-for="OptionText" class="form-label">Текст варианта</label>
                        <input asp-for="OptionText" class="form-control" required />
                        <span asp-validation-for="OptionText" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-3">
                        <button type="submit" class="btn btn-primary">Сохранить</button>
                        <a asp-action="EditField" asp-route-collectionId="@Model.CollectionId" asp-route-fieldId="@Model.FieldId" class="btn btn-secondary">Отмена</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>